<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context=".DashboardActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:padding="8dp"
        android:gravity="center_vertical"
        android:background="@color/colorPrimary"> <!-- Warna ungu dengan format ARGB -->

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:text="Dashboard"
            android:textSize="18sp"
            android:drawablePadding="8dp"
            android:textColor="@android:color/white"
            android:textStyle="bold" />
    </LinearLayout>

    <ImageView
        android:layout_marginTop="100dp"
        android:layout_marginBottom="50dp"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:backgroundTint="#FFFFFF"
        android:layout_centerHorizontal="true"
        android:src="@drawable/logo"
        android:id="@+id/logo"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logo"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:background="#E74C3C"
        android:drawableLeft="@drawable/eye"
        android:gravity="center"
        android:padding="20dp"
        android:text="LIHAT DATA"
        android:textSize="20sp"
        android:textColor="#FFFFFF"
        android:id="@+id/btn_lihat"
        android:textStyle="bold">
    </TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_tambah"
        android:layout_below="@+id/btn_lihat"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:background="#3498DB"
        android:drawableLeft="@drawable/add2"
        android:gravity="center"
        android:padding="20dp"
        android:text="INPUT DATA"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        android:textStyle="bold">
    </TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_informasi"
        android:layout_below="@+id/btn_tambah"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:background="#FFD700"
        android:drawableLeft="@drawable/info"
        android:gravity="center"
        android:padding="20dp"
        android:text="INFORMASI"
        android:textSize="20sp"
        android:textColor="#FFFFFF"
        android:layout_marginTop="20dp"
        android:textStyle="bold">
    </TextView>
</RelativeLayout>
